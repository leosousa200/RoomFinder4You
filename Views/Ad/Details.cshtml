@model RoomFinder4You.Models.Ad

@{
    ViewData["Title"] = "Details";
    var featuresMandatory = Model.room.Features.Where(a => a.featureType.IsMandatory).AsEnumerable<Feature>();
    var features = Model.room.Features.Where(a => !a.featureType.IsMandatory).AsEnumerable<Feature>();
    List<byte[]> galleryList = ViewBag.galleryImages;
    int slideNum = 1;
}

<h1>Details</h1>

<div>
    <h4>Ad</h4>
    <hr />
    <div class="form-group">
        <img src="data:@Model.PhotoFormat;base64,@Convert.ToBase64String(Model.MainPhoto)"
            style="max-width: 400px;max-height: 300px;">
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.room.location.city.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.room.location.city.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.room.location.Place)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.room.location.Place)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.room.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.room.Price) €
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.adStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.adStatus.Status)
        </dd>
    </dl>

    <h4>Características do quarto</h4>
    <hr />

    <dl class="row">
        @foreach (var feat in featuresMandatory)
        {
            <dt class="col-sm-2">
                @feat.featureType.Name
            </dt>
            <dd class="col-sm-10">
                @feat.Value
            </dd>
        }

    </dl>

    @if (features.Count() != 0)
    {
        <h4>Características adicionais</h4>
        <hr />

        <dl class="row">
            @foreach (var feat in features)
            {
                <dt class="col-sm-2">
                    @feat.featureType.Name
                </dt>
                <dd class="col-sm-10">
                    @feat.Value
                </dd>
            }

        </dl>
    }


    @if (galleryList != null)
    {
        <h4>Galeria</h4>
        <hr />

        <dl class="row">
            @foreach (var image in galleryList)
            {
                <dt class="col-sm-2">
                    imagem
                </dt>
                <dd class="col-sm-10">
                    <img src="data:.png;base64,@Convert.ToBase64String(image)" style="max-width: 400px;max-height: 300px;">
                </dd>
            }
        </dl>
    }

    <div id="carouselExampleIndicators" class="carousel slide"
        style="width: 550px;height: 300px;background-color: #92a8d1;">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                aria-current="true" aria-label="0"></button>

            @foreach (var _ in galleryList)
            {
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to=@slideNum class="active"
                    aria-current="true" aria-label=@slideNum></button>
                slideNum++;
            }
        </div>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="data:@Model.PhotoFormat;base64,@Convert.ToBase64String(Model.MainPhoto)"
                    class="mx-auto d-block" style="max-width: 550px;max-height: 300px;">
            </div>

            @foreach (var image in galleryList)
            {
                <div class="carousel-item">
                    <img src="data:.png;base64,@Convert.ToBase64String(image)" class="mx-auto d-block "
                        style="max-width: 550px;max-height: 300px;">
                </div>

            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
